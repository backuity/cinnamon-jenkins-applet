{
  "refreshInterval":
  { "type": "spinbutton"
  , "default": 30
  , "min": 1
  , "max": 3600
  , "units": "seconds"
  , "step": 5
  , "description": "Update interval"
  }

, "maxNumberOfJobs":
  { "type": "spinbutton"
  , "default": 15
  , "min": 1
  , "max": 100
  , "units": "jobs"
  , "step": 1
  , "description": "Maximum number of jobs displayed in the popup menu"
  }

, "hideSuccessfulJobs":
  { "type": "checkbox"
  , "default": false
  , "description": "Hide successful jobs in the popup menu"
  }

, "showNotificationForFailedJobs":
  { "type": "checkbox"
  , "default": false
  , "description": "Save last check and show notification for new failed jobs"
  }

, "sslStrict":
  { "type": "checkbox"
  , "default": true
  , "description": "Validate SSL certificate"
  }

, "jenkinsUrl": 
  { "type": "entry"
  , "default": ""
  , "description": "Jenkins URL (ex: https://jenkins.mydomain.com)"
  }
  
, "jenkinsFilter": 
  { "type": "entry"
  , "default": ""
  , "description": "Project filtering"
  }
 
, "credentials":
  { "type": "header"
  , "description": "Credentials (if access is resticted)"
  }
 
, "jenkinsUsername": 
  { "type": "entry"
  , "default": ""
  , "description": "Username"
  }  

, "jenkinsPassword": 
  { "type": "entry"
  , "default": ""
  , "description": "Password/API token"
  }    
}
